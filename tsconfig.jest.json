{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "jest.setup.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 